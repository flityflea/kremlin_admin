<h1>New concerto</h1>

<% form_for(@concerto) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :local %><br />
    <%= f.text_field :local %>
  </p>
  <p>
    <%= f.label :localidade %><br />
    <%= f.text_field :localidade %>
  </p>
  <p>
    <%= f.label :data %><br />
    <%= f.date_select :data %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', concertos_path %>
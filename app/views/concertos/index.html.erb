<h1>Listing concertos</h1>

<table>
  <tr>
    <th>Local</th>
    <th>Localidade</th>
    <th>Data</th>
  </tr>

<% @concertos.each do |concerto| %>
  <tr>
    <td><%=h concerto.local %></td>
    <td><%=h concerto.localidade %></td>
    <td><%=h concerto.data %></td>
    <td><%= link_to 'Show', concerto %></td>
    <td><%= link_to 'Edit', edit_concerto_path(concerto) %></td>
    <td><%= link_to 'Destroy', concerto, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New concerto', new_concerto_path %>
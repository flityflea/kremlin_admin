<h1>Listing curtas</h1>

<table>
  <tr>
    <th>Texto</th>
  </tr>

<% @curtas.each do |curta| %>
  <tr>
    <td><%=h curta.texto %></td>
    <td><%= link_to 'Show', curta %></td>
    <td><%= link_to 'Edit', edit_curta_path(curta) %></td>
    <td><%= link_to 'Destroy', curta, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New curta', new_curta_path %>